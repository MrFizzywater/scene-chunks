{
  "name": "scene-chunks",
  "version": "1.1.0",
  "main": "main.js",
  "description": "Structure-first screenwriting tool.",
  "author": "Nate LaCroix",
  "scripts": {
    "dev": "next dev",
    "build:web": "set TAILWIND_DISABLE_OXIDE=1&& next build",
    "start:web": "next start -p 3678",
    "electron": "set NODE_ENV=development&& electron .",
    "build": "next build",
    "dist:mac": "npm run build:web && CSC_IDENTITY_AUTO=false electron-builder --mac",
    "dist:win": "npm run build:web && set ELECTRON_BUILDER_DISABLE_REBUILD=1&& electron-builder --win",
    "lint": "eslint"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "firebase": "^12.5.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.natelacroix.scenechunks",
    "asar": false,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "files": [
      "app/**/*",
      "components/**/*",
      "context/**/*",
      "lib/**/*",
      "modules/**/*",
      "public/**/*",
      ".next/**/*",
      "next.config.*",
      "package.json",
      "main.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": true,
      "runAfterFinish": false,        
      "allowToChangeInstallationDirectory": false
    }
  }


}
